<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background10"
    android:id="@+id/mymainactivityId"
    tools:context="com.example.user.touremate.MainActivity">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:gravity="center">



         <ImageView

             android:layout_marginBottom="50dp"
             android:id="@+id/profile_image"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:src="@drawable/loginic"
            />



        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:drawableLeft="@drawable/userl"
                android:paddingLeft="10dp"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/login_useraNameID"
                android:hint="Email "/>

            <EditText
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edittextstyle"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/login_userPasswordID"
                android:hint="Password "/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:alpha=".7"
            android:id="@+id/button"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:background="@drawable/rippleeffect2"
            android:onClick="Login"/>


        <TextView
            android:paddingTop="25dp"
            android:textColor="@color/colourWhite"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_new_oneID"
            android:text="No Account yet?Create one"/>

        <TextView
            android:paddingTop="25dp"
            android:text="Forget Password"
            android:textStyle="bold"
            android:textColor="@color/colourWhite"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgetpassword"/>/>

    </LinearLayout>
     </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer">

    </FrameLayout>

</RelativeLayout>
