<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_image1"
    tools:context="com.example.user.touremate.CreateaCost">

    <android.support.v7.widget.Toolbar
        android:id="@+id/costtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="Create Expense "
            android:textColor="#000"
            android:textSize="21sp" />

    </android.support.v7.widget.Toolbar>

  <LinearLayout
      android:layout_marginRight="10dp"
      android:layout_marginLeft="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
     >


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/Create_cost_Name"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Costs Name"
                />

        </android.support.design.widget.TextInputLayout>




    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/Create_cost_Amount"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/Create_cost_AmountDetails"
            app:errorEnabled="true"
            android:layout_height="wrap_content"
            >
            <android.support.design.widget.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cost Details"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



    <Button
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textStyle="bold"
        android:background="@drawable/rippleeffectexpense"
        android:id="@+id/Create_cost_Button"
        />

  </LinearLayout>
</LinearLayout>
