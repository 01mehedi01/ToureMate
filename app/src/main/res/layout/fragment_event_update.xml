<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choose_second"
    android:gravity="center"
    tools:context="com.example.user.touremate.Fragment.EventUpdate">
    <TextView
        android:id="@+id/registration_WelcomeTitle"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Expense "
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/registration_userTitle"
            android:layout_marginLeft="7dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Costs Name  : "/>

        <EditText
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Create_cost_Name"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/registration_PhoneTitle"
            android:layout_marginLeft="7dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Amount           : "/>

        <EditText
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Create_cost_Amount"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/registration_PasswordTitle"
            android:layout_marginLeft="7dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Cost Details   : "/>

        <EditText
            android:hint="Not mendetory"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Create_cost_AmountDetails"/>
    </LinearLayout>



    <Button
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textStyle="bold"
        android:background="@drawable/round_button_status"
        android:id="@+id/Create_cost_Button"
        />



</LinearLayout>
